.tabs {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 30rpx 0;
}
.tabs .tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.tab-label {
  color: #666;
  font-size: 26rpx;
  height: 40rpx;
}
.index-tab {
  color: #000;
  margin-top: -10rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.tabs .tab-item .divider {
  height: 6rpx;
  width: 50rpx;
  margin-top: 10rpx;
  background-color: #f3d066;
}
