/* subpkg/service-detail/service-detail.wxss */
.container {
  background-color: #f1f1f0;
}
.cover-image {
  margin-bottom: 0;
}
.cover-image .image {
  width: 100%;
}

.info {
  width: 100%;
  margin-top: 0;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  background-color: #fff;
}
.title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.title-info {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  min-width: 100rpx;
  max-width: 340rpx;
  /* 显示两行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.title-type {
  display: flex;
  margin-left: 20rpx;
  align-items: center;
  justify-content: center;
}
.icon-type {
  margin-left: 8rpx;
}
.user {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-pic {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.score {
  color: #e75959;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.price-sales {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price {
  color: rgb(227, 77, 77);
  font-size: 30rpx;
  font-weight: 600;
}

.show-more {
  margin-top: 30rpx;
}
.service-status {
  margin-top: 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  color: #000;
  font-weight: 540;
}
.rating-list {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 0 30rpx;
}
.rating-title {
  font-size: 30rpx;
  font-weight: 600;
  height: 100rpx;
  line-height: 100rpx;
}
.line {
  background-color: rgb(245, 236, 236);
  height: 2rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

.no-rating {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #888;
  height: 100rpx;
}

.userInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.user {
  margin-top: 5rpx;
}
.create-time {
  color: #888;
  font-size: 26rpx;
  text-align: center;
}
.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.star {
  color: #888;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}
.icon {
  margin-left: 30rpx;
}
.text {
  font-size: 26rpx;
}

.illustration-image {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 30rpx;
}
.illustration-image .pic {
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.action-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  width: 100%;
  background-color: #fff;
}
.action-bar .btn-info {
  padding: 12rpx 48rpx !important;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 40rpx;
  border: 2rpx solid rgb(243, 234, 234);
  width: 28vw;
  height: 80rpx;
  font-size: 22rpx !important;
  line-height: 56rpx;
}
.action-bar .btn-stop {
  padding: 12rpx 48rpx !important;
  font-size: 22rpx !important;
  box-sizing: border-box;
  border: 2rpx solid rgb(243, 234, 234);
  line-height: 56rpx;
  width: 28vw;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #f9ce61;
}

.h {
  height: 250rpx;
}
